<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@drawable/back_1"
    android:orientation="vertical"
    tools:context=".ResultActivity"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorToolbar"
        tools:ignore="MissingConstraints" >
        <TextView
            android:id="@+id/allCountTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Векторина завершена"
            android:textColor="@color/colorToolbarText"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/allValueTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Результат"
        android:textColor="@color/colorTextQuestion"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"/>


    <TextView
        android:id="@+id/checkAnswerTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Коментарий"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/colorText"
        android:layout_marginTop="40dp"/>



</LinearLayout>