<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@drawable/back_2"
    android:orientation="vertical"
    tools:context=".SecondActivity"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorToolbar"
        tools:ignore="MissingConstraints" >
        <TextView
            android:id="@+id/allCountTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Всего набрано балов - 0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/colorToolbarText"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/allValueTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Вопрос № 1"
        android:textColor="@color/colorTextQuestion"
        android:textSize="20sp"
        android:gravity="center"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@color/colorRadioGroup"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/questionTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/question1"
            android:textStyle="bold"
            android:textColor="@color/colorRadioGroupText"
            android:textSize="18sp"/>
        <RadioButton
            android:id="@+id/answer1RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SecondActiv_Answ_1"
            android:textSize="17sp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/answer2RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SecondActiv_Answ_2"
            android:textSize="17sp"/>
        <RadioButton
            android:id="@+id/answer3RB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/SecondActiv_Answ_3"
            android:textSize="17sp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/answerBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ответить"
            android:textSize="20sp"
            android:textColor="@color/colorTextButton"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/colorButton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/nextBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дальше"
            android:textSize="20sp"
            android:textColor="@color/colorTextButton"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:backgroundTint="@color/colorButton"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/checkAnswerTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Проверка ответа"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="40dp"/>



</LinearLayout>